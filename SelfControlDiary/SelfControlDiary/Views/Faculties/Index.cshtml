@model IEnumerable<SelfControlDiary.Models.Faculty>
@{
    ViewData["Title"] = "Управление факультетами";
}

<h2>Управление факультетами</h2>

<table class="table">
    <tr><th>Название</th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-action="Groups" asp-route-id="@item.Id">Группы</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>

        </tr>
    }
</table>

<a asp-action="Create">Добавить факультет</a>