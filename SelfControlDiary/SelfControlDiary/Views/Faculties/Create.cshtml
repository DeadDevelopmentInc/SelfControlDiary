@model SelfControlDiary.ViewModels.CreateFacultyViewModel

@{

    ViewBag.Title = "Добавление факультета";

}

<h2>Добавление факультета</h2>

<form asp-action="Create">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Name" class="control-label">Название факультета</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>

</form>