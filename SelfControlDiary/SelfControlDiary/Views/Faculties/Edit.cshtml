@model SelfControlDiary.ViewModels.EditFacultyViewModel
@{
    ViewData["Title"] = "Редактирование имени факультета " + Model.Name;
}

<h2>Редактирование имени факультета @Model.Name</h2>

<form asp-action="Edit">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Name" class="control-label">Название факультета</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </div>

</form>
