@model SelfControlDiary.ViewModels.EditUserStudentViewModel
<h2>Добавление нового пользователя-студента</h2>
<form method="post" asp-controller="Users" asp-action="EditStudent">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Имя</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Фамилия</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Sex" class="control-label">Пол</label>
        <select asp-for="Sex">
            <option value="Мужской" selected>Мужской</option>
            <option value="Женский">Женский</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Дата рождения</label>
        <input asp-for="BirthDate" class="form-control" />
    </div>

    @*<div class="form-group">
            <label>Факультет</label>
            <select id="fac">
                @foreach(var item in Model.Selector)
                {
                    <option value="@item.Key">@item.Key</option>
                }
            </select>
        </div>*@

    <div class="form-group">
        <label asp-for="GroupId" class="control-label">Группа</label>
        <div id="g">
            <select asp-for="GroupId">
                @foreach (var item in Model.Groups)
                {
                    <option value="@item.Value">@item.Key</option>
                }
            </select>
        </div>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>
<a asp-action="Index">Назад</a>