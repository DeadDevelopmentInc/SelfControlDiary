@model SelfControlDiary.ViewModels.CreateUserStudentViewModel
<h2>Добавление нового пользователя-студента</h2>
<form method="post" asp-controller="Users" asp-action="CreateStudent">
    <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm"></label><br />
            <input asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="form-group row">
            <div class="col-xs-4">
                <label asp-for="FirstName" class="control-label">Имя</label>
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-xs-4">
                <label asp-for="LastName" class="control-label">Фамилия</label>
                <input type="text" asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-xs-4">
                <label asp-for="Sex" class="control-label">Пол</label>
                <select asp-for="Sex">
                    <option value="Мужской" selected>Мужской</option>
                    <option value="Женский">Женский</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-xs-4">
                <label asp-for="BirthDate" class="control-label">Дата рождения</label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
        </div>

