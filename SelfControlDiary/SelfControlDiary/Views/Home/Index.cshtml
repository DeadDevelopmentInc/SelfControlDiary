@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" style="width:70%; left:15%;" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/css/scott-webb-22420.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    ЧЕТКОЕ НАЗВАНИЕ
                    <a class="btn btn-default" asp-controller="Account" asp-action="Register">Регистрация</a>
                    <a class="btn btn-default" asp-controller="Account" asp-action="Login">Вход</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/css/jason-briscoe-149781-unsplash.jpg"  style="height:auto; width:100%" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Мотивационная цитата или надвись о возможностях приложения
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/css/josh-nuttall-305072-unsplash.jpg" style="height:auto; width:100%"  class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Мотивационная цитата или надвись о возможностях приложения
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

