        <td>@Html.Raw(Math.Round(Model.List2.Average(p => p.Stat), 2))</td>
    </tr>
    <tr>
        <td>Количество студентов</td>
        <td>@Model.Count1</td>
        <td>@Model.Count2</td>
    </tr>
</table>