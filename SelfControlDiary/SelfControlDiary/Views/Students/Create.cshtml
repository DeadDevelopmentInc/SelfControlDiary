@model SelfControlDiary.ViewModels.CreateStudentViewModel
@{
    ViewData["Title"] = "Добавить студента";
}

<h2>Добавить студента</h2>

<form asp-action="Create">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="FirstName" class="control-label">Имя</label>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="LastName" class="control-label">Фамилия</label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Sex" class="control-label">Пол</label>
            <select asp-for="Sex">
                <option value="Мужской" selected>Мужской</option>
                <option value="Женский">Женский</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="BirthDate" class="control-label">Дата рождения</label>
            <input asp-for="BirthDate" class="form-control" />
        </div>
    </div>

        @*<div class="form-group">
            <label>Факультет</label>
            <select id="fac">
                @foreach(var item in Model.Selector)
                {
                    <option value="@item.Key">@item.Key</option>
                }
            </select>
        </div>*@

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="GroupId" class="control-label">Группа</label>
            <div id="g">
                <select asp-for="GroupId">
                    @foreach (var item in Model.Groups)
                {
                    <option value="@item.Value">@item.Key</option>
            }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>

</form>