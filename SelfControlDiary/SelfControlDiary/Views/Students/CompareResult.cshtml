@model SelfControlDiary.ViewModels.IndividualCompareResultViewModel
@{
    ViewData["Title"] = "Показатели студента " + Model.l1.Stud.LastName + " " + Model.l1.Stud.FirstName + " в " + Model.l1.Semestr + " и " + Model.l2.Semestr + " семестрах";
}

<h2>Показатели студента @Model.l1.Stud.LastName @Model.l1.Stud.FirstName в @Model.l1.Semestr и @Model.l2.Semestr семестрах</h2>

<table class="table">
    <tr><th>Наименование показателя</th><th>Семестр @Model.l1.Semestr</th><th>Вердикт</th><th>Семестр @Model.l2.Semestr</th><th>Вердикт</th>
    <tr>
        <td>Весоростовой индекс</td>
        <td>@Html.Raw(Model.l1.GetVRIndex())</td>
        <td>@Html.Raw(Model.l1.GetVRVerdict())</td>
        <td>@Html.Raw(Model.l2.GetVRIndex())</td>
        <td>@Html.Raw(Model.l2.GetVRVerdict())</td>
    </tr>
    <tr>
        <td>Жизненный индекс</td>
        <td>@Html.Raw(Model.l1.GetLifeIndex())</td>
        <td>@Html.Raw(Model.l1.GetLifeVerdict())</td>
        <td>@Html.Raw(Model.l2.GetLifeIndex())</td>
        <td>@Html.Raw(Model.l2.GetLifeVerdict())</td>
    </tr>
    <tr>
        <td>Силовой индекс правой кисти</td>
        <td>@Html.Raw(Model.l1.GetRightWristPowerIndex())</td>
