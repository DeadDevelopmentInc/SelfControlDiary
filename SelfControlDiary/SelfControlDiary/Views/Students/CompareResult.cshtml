        <td>@Html.Raw(Model.l1.Stat)</td>
        <td>@Html.Raw(Model.l1.GetStatVerdict())</td>
        <td>@Html.Raw(Model.l2.Stat)</td>
        <td>@Html.Raw(Model.l2.GetStatVerdict())</td>
    </tr>
</table>