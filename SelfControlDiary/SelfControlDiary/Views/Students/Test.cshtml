@model SelfControlDiary.ViewModels.TestViewModel
@{
    ViewData["Title"] = "Test";
}

<h2>Test</h2>

<form asp-action="Index">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group" id="fs">
        <label asp-for="FacultyId" class="control-label">Факультеты</label>
        <select asp-for="FacultyId" id="fss">
            @foreach (var item in ViewBag.Faculties)
            {
                <option value="@item.Value">@item.Key</option>
            }
        </select>
    </div>

    <div class="form-group" id="gs">
        <label asp-for="GroupId" class="control-label">Группа</label>
        <select asp-for="GroupId">
            @foreach (var item in ViewBag.Groups)
            {
                <option value="@item.Value">@item.Key</option>
            }
        </select>
    </div>

    <input type="submit" value="Показать" class="btn btn-default" />

</form>

@section scripts{
    <script src='~/ts/UpdateGroups.js'></script>
}